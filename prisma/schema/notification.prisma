model Notification {
    id Int @id @default(autoincrement())

    // Normal Fields
    image     String?
    title     Json      @db.Json
    body      Json      @db.Json
    read      Boolean   @default(false)
    // Default Fields
    createdAt DateTime  @default(now()) @map("created_at")
    deletedAt DateTime? @map("deleted_at")

    // Direct Relations
    User    User?   @relation(fields: [userId], references: [id])
    userId  Int?    @map("user_id")
    group   Role?   @relation("NotificationGroup", fields: [groupId], references: [key])
    groupId String? @map("group_id")

    @@map("notifications")
}

model SystemNotification {
    id Int @id @default(autoincrement())

    // Normal Fields
    title        Json      @db.Json
    body         Json      @db.Json
    email        Boolean   @default(false)
    sms          Boolean   @default(false)
    notification Boolean   @default(false)
    event        String
    receiverId   String    @map("receiver_id")
    senderId     String    @map("sender_id")
    group        Boolean   @default(false)
    // Default Fields
    createdAt    DateTime  @default(now()) @map("created_at")
    deletedAt    DateTime? @map("deleted_at")

    // Direct Relations
    Sender   Role @relation("SystemSenderNotification", fields: [senderId], references: [key])
    Receiver Role @relation("SystemReceiverNotification", fields: [receiverId], references: [key])

    @@map("system_notifications")
}
